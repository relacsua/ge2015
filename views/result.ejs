<html>
<head>
  <meta charset='utf-8'>
  <title>#sg15 | Unofficial General Election 2015</title>
  <link href='//fonts.googleapis.com/css?family=Raleway:400,100,300,600,700' rel='stylesheet' type='text/css' />

  <link rel="stylesheet" type="text/css" href="/stylesheets/result.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/vendor/normalize.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/vendor/skeleton.css" />

</head>
<body>

  <% if(user) { %>
    <nav class='navbar'>
      <ul class='navbar-list'>
        <li class="navbar-item icon">
          <img width="40" src="/images/icon.svg">
        </li>
        <li class='navbar-item navbar-facebook-logout'>
          <a class='facebook-logout' href='/logout'>Log out </a>
        </li>
        <li class='navbar-item navbar-profile'>
          <img class='user-profile' src='<%= user.image %>' />
        </li>
        <li class='navbar-item navbar-username'>
          <span class='user-name'><%= user.name.split(' ')[0] %></span>
        </li>
      </ul>
    </nav>
  <% } %>

  <div class='container main-content' >
    <div id='pieChartContainer'></div>
    <div class='no-result' id='no-result'>
      <img src='/images/dizzy.png' class='no-result-image' />
      <h3 class='text-center no-result-desc'>It seems that your friends have not voted for a party yet</h3>
      <h4 class='text-center text-bold no-result-share'>Share this with your friends</h4>
    </div>
    <div class="btn-panel row">
      <button class='share-facebook-btn'>Share this on facebook</button>
    </div>
  </div>
  <script type="text/javascript">
    (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script type="text/javascript" src="/javascripts/modernizr.custom.js"></script>
  <script type="text/javascript" src="/javascripts/vendor/highcharts/highcharts.js"></script>
  <script type="text/javascript" src="/javascripts/result.js"></script>

</body>
</html>